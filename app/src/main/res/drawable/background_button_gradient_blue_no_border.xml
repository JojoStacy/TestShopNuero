<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colourBackgroundBlueGradientStart"
                android:endColor="@color/colourBackgroundBlueLightGradientCenter"
                android:angle="270" />

            <corners
                android:radius="20dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colourCream"
                android:startColor="@color/colourWhite"
                android:angle="270" />

            <corners
                android:radius="20dp" />

        </shape>
    </item>

    <item >
        <shape>
            <gradient
                android:endColor="@color/colourBackgroundDarkBlueGradientStart"
                android:startColor="@color/colourBackgroundBlueLightGradientCenter"
                android:angle="180" />

            <corners
                android:radius="20dp" />

        </shape>
    </item>

</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:padding="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.neuroinnova.neuroinnovasampleapp.CartActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartValue"
        android:text="Cart"
        android:padding="5dp"
        android:textColor="@color/colourWhite"
        android:background="@drawable/background_orange_rectangle"
        android:layout_margin="15dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_blue_rectangle"
        android:id="@+id/btnPayment"
        android:textColor="@color/colourWhite"
        android:text="Payment"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_red_rectangle"
        android:id="@+id/btnEmptyCart"
        android:textColor="@color/colourWhite"
        android:text="Empty Cart"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_alignParentEnd="true" />


</LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listView"
        android:layout_margin="10dp"
        android:dividerHeight="5dp"
        android:layout_height="wrap_content"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/white_round_background"
android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:srcCompat="@drawable/product"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imgItemPic"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        />




    <TextView
        android:text="Hair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/imgItemPic"
     
        android:id="@+id/txtCategory" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colourGrey"
        android:layout_below="@id/txtCategory"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"

        android:id="@+id/textViewUnderline" />

    <TextView
        android:text="Nice and Lovely Conditioner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textViewUnderline"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/txtProductName" />

    <TextView
        android:text="Ksh.300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/txtProductName"
        android:id="@+id/txtProductPrice" />



    <TextView
        android:text="20% Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/orange"
        android:background="@drawable/background_white_orange_border"
        android:layout_below="@id/txtProductName"
        android:id="@+id/txtDiscount" />



    <Button
        android:text="Add To Cart"
        android:background="@drawable/background_orange_rectangle"
        android:layout_width="wrap_content"
        android:textColor="@color/colourWhite"
        android:padding="2sp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:layout_height="20sp"
        android:layout_marginTop="10sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtProductPrice"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/btnAddToCart" />


</RelativeLayout>

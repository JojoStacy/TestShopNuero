<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colourBackgroundBlueGradientStart"
                android:endColor="@color/colourBackgroundBlueLightGradientCenter"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colourCream" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colourCream"
                android:startColor="@color/colourWhite"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colourBackgroundBlueGradientStart" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item >
        <shape>
            <gradient
                android:endColor="@color/colourBackgroundBlueGradientStart"
                android:startColor="@color/colourBackgroundBlueLightGradientCenter"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/colourCream" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

</selector>